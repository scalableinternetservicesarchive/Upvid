<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="input-group">
      <span class="input-group-addon">Email</span>
      <%= f.email_field :email, :class => "form-control", :style => "width: 230px;" %>
  </div>
  <br>
  <div class="input-group">
      <span class="input-group-addon">Password</span>
      <%= f.password_field :password, :class => "form-control", :style => "width: 230px;" %>
  </div>
  <br>
  <div class="input-group">
      <span class="input-group-addon">Password confirmation</span>
      <%= f.password_field :password_confirmation, :class => "form-control", :style => "width: 230px;" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-submit"%>
  </div>
<% end %>
