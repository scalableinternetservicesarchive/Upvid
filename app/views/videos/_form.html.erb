<% cache do %>
  <%= form_for(@video, :html => {:multipart => true}) do |f| %>
    <% if @video.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

        <ul>
        <% @video.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group">
        <span class="input-group-addon">Title</span>
        <%= f.text_field :title, :class => "form-control", :placeholder => "Shawshank Redemption", :style => "width: 230px;" %>
    </div>

    <br>

    <div class="input-group">
        <span class="input-group-addon">Category</span>
        <%= f.text_field :category, :class => "form-control", :placeholder => "Action", :style => "width: 200px;" %>
    </div>
    <br>
    <div class="field">
      <%= f.file_field :local_videofile%>
    </div>

    <div class="actions">
      <%= f.submit "Upload", :class => "btn btn-submit"%>
    </div>
  <% end %>
<% end %>